{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@dazil/docs/(.*)": "<rootDir>/../libs/docs/src/$1",
    "@dazil/docs": "<rootDir>/../libs/docs/src",
    "@dazil/api-utils/(.*)": "<rootDir>/../libs/api-utils/src/$1",
    "@dazil/api-utils": "<rootDir>/../libs/api-utils/src"
  }
}